{
  "name": "alecrabbit/php-console-colour",
  "type": "library",
  "description": "Helps to do colored console output.",
  "keywords": [
    "console",
    "color",
    "colour",
    "ansi",
    "terminal",
    "width",
    "height",
    "output"
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.2",
    "alecrabbit/php-cli-tools": "^0.6"
  },
  "require-dev": {
    "alecrabbit/php-helpers": "^0.8",
    "nunomaduro/collision": "^4.2",
    "phpunit/phpunit": "^8.5",
    "symfony/var-dumper": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "AlecRabbit\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AlecRabbit\\Tests\\": "tests"
    },
    "files": [
      "src/bootstrap.php"
    ]
  },
  "minimum-stability": "alpha"
}
